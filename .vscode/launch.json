{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Development",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "runtimeArgs": [
        "watch",
        "--env-file=.env"
      ],
      "args": [
        "src/index.ts"
      ],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
{
  "name": "templates",
  "version": "1.0.0",
  "type": "module",
  "main": "/dist/index.js",
  "license": "MIT",
  "engines": {
    "npm": ">=10.2.4",
    "node": ">=20.0.0"
  },
  "scripts": {
    "packages:health": "npm outdated",
    "tests": "vitest --mode development",
    "build": "npm run format && tsup src",
    "format": "eslint --fix && prettier ./src/**/* --write --check --config ./.prettierrc",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "node --env-file=.env -r tsconfig-paths/register dist/index.js",
    "db:push": "drizzle-kit push:pg",
    "db:migrate:up": "drizzle-kit up:pg",
    "db:migrate": "drizzle-kit generate:pg",
    "db:studio": "npx drizzle-kit studio --host localhost"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.24",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.2",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.15",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.29.4",
    "drizzle-typebox": "^0.1.1",
    "fastify": "^4.26.2",
    "pino": "^8.19.0",
    "postgres": "^3.4.3",
    "redis": "^4.6.13"
  }
}

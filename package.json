{
  "name": "templates",
  "version": "1.0.0",
  "type": "module",
  "main": "/dist/index.js",
  "license": "MIT",
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "scripts": {
    "tests": "vitest --mode development",
    "build": "npm run format && tsup src",
    "format": "eslint --fix && prettier ./src/**/* --write --check --config ./.prettierrc",
    "dev": "tsx watch --env-file=.env src/index.ts",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "db:push": "drizzle-kit push:mysql",
    "db:migration": "drizzle-kit generate:mysql",
    "db:studio": "npx drizzle-kit studio --host localhost"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.2",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "drizzle-orm": "^0.29.1",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.25.2",
    "mysql2": "^3.6.5",
    "redis": "^4.6.12",
    "zod": "^3.22.4"
  }
}

{
  "name": "templates",
  "version": "1.0.0",
  "type": "module",
  "main": "/dist/index.js",
  "license": "MIT",
  "engines": {
    "npm": ">=10.2.4",
    "node": ">=20.0.0"
  },
  "scripts": {
    "pb:health": "npm outdated",
    "pb:eslint": "eslint --no-warn-ignored --fix ./src/**/*.ts",
    "pb:prettier": "prettier ./src/**/*.ts --write --check",
    "db:push": "drizzle-kit push:pg",
    "db:migrate:up": "drizzle-kit up:pg",
    "db:migrate": "drizzle-kit generate:pg",
    "db:studio": "drizzle-kit studio --host localhost",
    "tests": "vitest --mode development",
    "build": "npm run pb:eslint && npm run pb:prettier && tsup src",
    "workers": "tsx watch --env-file=.env -- src/workers.ts",
    "dev": "tsx watch --env-file=.env -- src/commands/exec-process.ts",
    "start": "node --env-file=.env -r tsconfig-paths/register dist/workers.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.12.8",
    "@types/ws": "^8.5.10",
    "drizzle-kit": "^0.20.17",
    "eslint": "^9.1.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-drizzle": "^0.2.2",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "tsx": "^4.8.2",
    "typescript": "^5.4.5",
    "vitest": "^1.5.3"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.30.8",
    "drizzle-zod": "^0.5.1",
    "fastify": "^4.26.2",
    "fastify-type-provider-zod": "^1.1.9",
    "pino": "^9.0.0",
    "pm2": "^5.3.1",
    "postgres": "^3.4.3",
    "redis": "^4.6.13",
    "zod": "^3.23.5"
  }
}
